<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right" id="top-nav-line">
        <button type="submit" formaction="{{ action }}" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <div class="btn-group">
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-trash"></i>&nbsp;&nbsp;&nbsp;<span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><a onclick="confirm('{{ text_are_you_sure }}') ? href='{{ uninstall }}' : false;"><i class="fa fa-trash"></i> {{ button_uninstall }}</a></li>
            <li><a onclick="confirm('{{ text_are_you_sure }}') ? href='{{ uninstall_and_remove }}' : false;"><i class="fa fa-trash"></i> {{ button_uninstall_and_remove }}</a></li>
          </ul>
        </div>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb-module">
        {% for breadcrumb in breadcrumbs %} 
          {% if (breadcrumb['href']) %} 
            <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
          {% elseif (breadcrumb['href'] is empty and breadcrumb['dropdown']) %} 
            <li>
              <div class="btn-group dropdown-on-hover">
                <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ breadcrumb['text'] }} <span class="caret"></span></button>
                {% if (breadcrumb['dropdown']) %} 
                  <ul class="dropdown-menu">
                    {% for dropdown in breadcrumb['dropdown'] %} 
                      <li><a href="{{ dropdown['href'] }}">{% if (dropdown['active']) %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %} {{ dropdown['text'] }}</a></li>
                    {% endfor %} 
                  </ul>
                {% endif %} 
              </div>
            </li>
          {% else %} 
            <li><a>{{ breadcrumb['text'] }}</a></li>
          {% endif %} 
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid" id="top-alerts">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-2">
        <!-- Nav tabs -->
        <div class="list-group list-group-root well" id="setting-tabs">
          <a class="list-group-item list-group-item-info"><i class="fa fa-life-ring" aria-hidden="true"></i>{{ tab_support_setting }}</a>
          <div class="list-group">
            <a class="list-group-item" data-toggle="tab" href="#support-extension-block" role="tab"><i class="fa fa-info-circle"></i> {{ tab_support_extension_setting }}</a>
          </div>
        </div>
      </div>
      <div class="col-sm-9 col-md-9 col-lg-10">
        <div class="panel panel-default">
          <div class="panel-body">
            <form method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
              <div class="tab-content">
                <!-- TAB Support Extension block -->
                <div class="tab-pane fade active in" role="tabpanel" id="support-extension-block">
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-license_key">{{ text_license_key }}</label>
                    <div class="col-sm-10">
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                        <input type="text" name="{{ _name }}_license" value="{{ license_key }}" class="form-control" id="input-license_key" placeholder="XXXXXXXX-XXXXXXXX-XXXXXXXX-XXXXXXXX" />
                      </div>
                      {% if (error_license_key) %} 
                        <div class="alert alert-danger text-danger"><i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ error_license_key }}</div>
                      {% endif %} 
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- start: code for module usability -->
<script type="text/javascript">
$(function(){
  $('#setting-tabs a[href=\'#support-extension-block\']').trigger('click').addClass('list-group-item-warning').prepend('<i class="fa fa-chevron-right"></i>');
});
</script>
<!-- end: code for module usability -->
